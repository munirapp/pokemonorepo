{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "commonjs",
    "types": ["node"],
    "emitDecoratorMetadata": true,
    "target": "es2021",
    "composite": true,
    "declaration": true
  },
  "exclude": [
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "../../libs/shared/**/*.spec.ts"
  ],
  "include": ["src/**/*.ts", "prisma/**/*.ts", "../../libs/shared/**/*.ts"]
}
